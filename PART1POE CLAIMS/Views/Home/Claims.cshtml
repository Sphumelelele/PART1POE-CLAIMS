    #Personal-container {
        width: 90%;
        max-width: 800px;
        margin-bottom: 20px;
    }

    #Personal {
        margin-top: 30px;
        display: grid;
        background-color: #343a40;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

    #PersonalVER {
