    }

    form h3 {
        margin-top: 0px;
        color: #e5383b;
        padding-bottom: 10px;
        padding-top: 10px;
    }

    form label {
        display: block;
        font-weight: 600;
        color: #ced4da;
        margin-top: 10px;
    }

    form input {
        width: 100%;
        padding: 8px;
        border: 0px solid #ced4da;
        border-radius: 4px;
        margin-top: 5px;
        background: #495057;
        color: #fff;
    }

    #btn-container button {
        width: 90%;
        max-width: 800px;
        text-align: center;
    }

    #btn button {
        background-color: #212529;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        width: 200px;
    }

        #btn button:hover {
            background-color: #ced4da;
            color: #212529;
        }

    table {
        width: 90%;
        max-width: 800px;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    table,
    th,
    td {
        border: 1px solid #ced4da;
    }

    th,
    td {
        padding: 10px;
        text-align: left;
        color: #fff;
    }

    th {
        background-color: #212529;
    }

    tr:nth-child(even) {
        background-color: #495057;
    }

    #claims-form button {
        background-color: #a4161a;
        color: #fff;
        padding: 10px 15px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        width: 230px;
        margin-left: 260px;
        margin-top: 20px;
        display: block;
    }

    #btn-personal {
        background-color: #a4161a;
        color: #fff;
        padding: 19px;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 10px;
        width: 250px;
        margin-left: 120px;
        margin-top: 20px;
    }

    .ph {
        margin-left: 40px;
        font-size: 35px;
        vertical-align: middle;
        color: #e5383b;
    }

    .ph-currency-circle-dollar {
        margin-left: 30px;
    }

    .ph-info {
        margin-left: 10px;
    }

    .ph-check-circle {
        margin-left: 77px;
    }

    .ph-check-square {
        margin-left: 60px;
    }

    .ph-folder-open {
        margin-right: 13px;
        font-size: 25px;
        color: #fff;
    }
    /* Style the datalist input */
input[list] {
    width: 100%;
    padding: 10px;
    border-radius: 6px;
    border: none;
    background-color: #495057;
    color: #fff;
    font-size: 15px;
    transition: all 0.2s ease-in-out;
}

input[list]:focus {
    outline: none;
    background-color: #6c757d;
    box-shadow: 0 0 5px rgba(229, 56, 59, 0.8); /* red glow */
}

/* Placeholder styling */
input[list]::placeholder {
    color: #adb5bd;
    font-style: italic;
}

/* Optional: if you want dropdown-like styling in some browsers */
datalist option {
    background: #343a40;
    color: #fff;
    padding: 5px;
}

</style>

